 // 1) Переменные для состояния
 // Текущее состояние: вкладка и язык
  // Будем помнить, какой таб сейчас активен
  let currentType = 'photo';

  // 1. Настраиваем i18next
  i18next
    .use(i18nextHttpBackend)
    .init({
      lng: localStorage.getItem('lang') || 'en',
      fallbackLng: 'en',
      debug: true,
      backend: { loadPath: 'locales/{{lng}}.json' }
    }, () => {
      // Переводим всё, что с data-i18n-key
      document.querySelectorAll('[data-i18n-key]').forEach(el => {
        el.textContent = i18next.t(el.getAttribute('data-i18n-key'));
      });

      // Запускаем первоначальную загрузку галереи
      loadGallery(currentType, i18next.language);

      // Вешаем клики на табы **только здесь**, чтобы DOM был готов
      document.getElementById('photos-tab').addEventListener('click', () => {
        currentType = 'photo';
        loadGallery('photo', i18next.language);
      });
      document.getElementById('videos-tab').addEventListener('click', () => {
        currentType = 'video';
        loadGallery('video', i18next.language);
      });
    });

  // 2. Функция смены языка (её вызывают inline-кнопки header.html)
  window.changeLanguage = lang => {
    i18next.changeLanguage(lang, () => {
      localStorage.setItem('lang', lang);
      // Обновляем статические тексты
      document.querySelectorAll('[data-i18n-key]').forEach(el => {
        el.textContent = i18next.t(el.getAttribute('data-i18n-key'));
      });
      // Перезагружаем галерею на текущем табе
      loadGallery(currentType, lang);
    });
  };

  // 3. Функция загрузки галереи
  async function loadGallery(type, lang) {
    // Очищаем оба контейнера
    document.getElementById('photosContainer').innerHTML = '';
    document.getElementById('videosContainer').innerHTML = '';

    try {
      const res = await fetch(`/gallery?type=${type}&lang=${lang}`);
      if (!res.ok) throw new Error(`Status ${res.status}`);
      const { items } = await res.json();

      const container = 
        type === 'photo'
          ? document.getElementById('photosContainer')
          : document.getElementById('videosContainer');

      if (items.length === 0) {
        container.innerHTML = `<p>No ${type} to display.</p>`;
        return;
      }
      
      items.forEach(item => {
        const card = document.createElement('div');
        if (type === 'photo') {
          card.className = 'photo-card';
          card.innerHTML = `
            <img src="${item.filepath}" alt="${item.title}">
            <div class="photo-info">
              <p class="photo-title">${item.title}</p>
            </div>`;
        } else {
          card.className = 'video-card';
          const media = item.filepath.startsWith('/uploads/')
            ? `<video controls>
                 <source src="${item.filepath}" type="video/mp4">
               </video>`
            : `<iframe src="${item.filepath}" allowfullscreen></iframe>`;
          card.innerHTML = `
            ${media}
            <div class="video-info">
              <p class="video-title">${item.title}</p>
            </div>`;
        }
        container.appendChild(card);
      });
    } catch (err) {
      console.error('Error loading gallery:', err);
    }
  }
  </script>


  <script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');

    // Открытие по клику на изображение
    document.body.addEventListener('click', (e) => {
      if (e.target.tagName === 'IMG' && e.target.closest('.photo-card')) {
        modalImage.src = e.target.src;
        modal.style.display = 'flex';
      }
    });

    // Закрытие по клику на модалку
    modal.addEventListener('click', () => {
      modal.style.display = 'none';
      modalImage.src = '';
    });
  });
</script>



